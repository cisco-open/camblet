  <div class="flex gap-8 md:gap-20 items-center justify-center mt-10 flex-wrap">
    <Icon class="h-8 md:h-14" name="simple-icons:kubernetes" />
    <Icon class="h-8 md:h-12" name="simple-icons:redhat" />
    <Icon class="h-8 md:h-16" name="simple-icons:vmware" />
